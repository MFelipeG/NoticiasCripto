<body>
  <header>
    <h1>CriptoNews</h1>
    <p>As últimas notícias do mundo das criptomoedas, atualizadas em tempo real!</p>
  </header>

  <div class="news-container" id="news-container">
    <!-- Notícias serão carregadas aqui -->
  </div>

  <footer>
    <p>Desenvolvido por [Seu Nome] | Fontes de notícias de parceiros confiáveis como CoinDesk, CoinTelegraph e Investing.com.</p>
  </footer>

  <script>
    const newsContainer = document.getElementById('news-container');

    async function fetchNews() {
      try {
        // Simulação de fontes de notícias
        const sources = [
          "https://br.cointelegraph.com",
          "https://www.coindesk.com/pt-br",
          "https://pt.investing.com/news/cryptocurrency-news"
        ];

        // Atualização (simulada) das notícias
        newsContainer.innerHTML = ''; // Limpa as notícias antigas
        sources.forEach((source, index) => {
          const newsItem = document.createElement('div');
          newsItem.classList.add('news-item');
          newsItem.innerHTML = `
            <h2>Notícia ${index + 1} de ${source}</h2>
            <p>Resumo da notícia ${index + 1}. Acesse a fonte para mais detalhes.</p>
            <a href="${source}" target="_blank">Leia mais</a>
          `;
          newsContainer.appendChild(newsItem);
        });
      } catch (error) {
        console.error("Erro ao carregar as notícias:", error);
        newsContainer.innerHTML = '<p>Erro ao carregar as notícias. Tente novamente mais tarde.</p>';
      }
    }

    // Atualiza as notícias a cada 5 minutos
    fetchNews();
    setInterval(fetchNews, 300000); // Atualiza a cada 5 minutos (300000ms)
  </script>
</body>
